# Database Configuration
DB_USER=studymate
DB_PASSWORD=your-secure-password
DB_ROOT_PASSWORD=your-root-password

# Container Registry
REGISTRY_URL=your-registry-url
IMAGE_NAME=studymate-server

# OAuth Configuration
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret
NAVER_REDIRECT_URI=https://api.languagemate.kr/login/oauth2/code/naver

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://api.languagemate.kr/login/oauth2/code/google

# JWT Configuration
JWT_SECRET=your-very-long-jwt-secret-key-at-least-256-bits-for-production-use
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# NCP Object Storage
NCP_OBJECT_STORAGE_ENDPOINT=https://kr.object.ncloudstorage.com
NCP_ACCESS_KEY=your-ncp-access-key
NCP_SECRET_KEY=your-ncp-secret-key
NCP_BUCKET_NAME=languagemate-profile-img

# Clova Studio API
CLOVA_STUDIO_ENDPOINT=https://clovastudio.stream.ntruss.com
CLOVA_API_KEY=your-clova-api-key